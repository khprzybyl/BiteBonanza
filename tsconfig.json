{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["**/*.ts", "**/*.tsx", "src/types/declarations.d.ts"],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
